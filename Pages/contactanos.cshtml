@page
@model Artifice_web.Pages.contactanosModel
@{
    ViewData["Title"] = "Contáctanos";
}


<body>
<h1>Contáctanos</h1>

<div class="container-fluid" style="margin-top: 8rem;">
    <div class="row">

        <!--Columna para la imagen-->
        <div class="col-md-6 text-left text-md-left align-self-md-center">
            <img src="img/form_ladder.jpg" class="image-lg-fluid" alt="levante" width="500" height="500">
        </div>

        <!--Columna para el formulario-->
        <div class="col-md-6 text-left align-self-md-center mt-3">

            <form>
            <div class="row">
                    <div class=" mb-3 col-md-6 col-12">
                         <label for="InputName" class="form-label">Nombre</label>
                         <input type="text" class="form-control" id="InputName">
                         
                     </div>

                     <div class=" mb-3 col-md-6 col-12">
                        <label for="InputApellido" class="form-label">Apellido</label>
                        <input type="text" class="form-control" id="InputApellido">
                        
                    </div>
             </div>

                 <div class="row">
                        <div class="mb-3 col-md-6 col-12">
                        <label for="InputTelefono" class="form-label">Teléfono</label>
                        <input type="text" class="form-control" id="InputTelefono">
                    </div>
                        <div class="mb-3 col-md-6 col-12">
                        <label for="InputCelular" class="form-label">Teléfono Celular</label>
                        <input type="text" class="form-control" id="InputCelular">
                    </div>
                </div>

                <div class="row mb-3">
                        <div class="col-md-6 col-12">
                        <label for="InputCorreo" class="form-label">Correo Electrónico</label>
                        <input type="email" class="form-control" id="InputCorreo">
                    </div>

                        <div class="col-md-6 col-12">
                            <label class="form-label">Tipo de servicio</label>
                            <select class="form-select" aria-label="Selecciona una opción">
                                <option value="1">Asesoría</option>
                                <option value="2">Diseño</option>
                                <option value="3">Remodelación</option>
                            </select>
                    </div>
                </div>
                    <div class="row"> <!--La caja de texto ocupará todo el ancho de su propio contenedor-->
                        <div class="col-12 form-floating mb-5" >
                            <textarea class="form-control" placeholder="Deje sus comentarios" id="floatingTextarea"></textarea>
                            <label for="floatingTextarea" class="ms-3">Comentarios</label>
                        </div>
                    </div>
                <div class="botton-group" role="group" >
                    <div class="col mt-3" >  
                    <button type="submit" class="btn btn-dark">Enviar</button>
                    <button type="reset" class="btn btn-dark">Limpiar</button>
                    <a href="#" id="cancel" name="cancel" class="btn btn-dark">Cancelar</a>
                    </div>
 
                </div>
            </form>
    </div>
</div>
 </div> <!--Container General-->
 
</body>


